@model WebQLHV.Models.TrungTam
@{
    ViewBag.Title = "Sửa thông tin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/trungtam" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Sửa</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sửa thông tin trung tâm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trung tâm</a></li>
                    <li class="breadcrumb-item active">Sửa</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Nhập thông tin trung tâm</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <!-- your steps content here -->
                <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group">
                        @Html.HiddenFor(m => m.ID)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName">Tên trung tâm</label>
                        @Html.TextBoxFor(m => m.NAME, new { @class = "form-control", @placeholder = "NAME" })

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail">Email</label>
                        @Html.TextBoxFor(m => m.EMAIL, new { @class = "form-control", @placeholder = "Email" })

                    </div>
                    <div class="form-group">
                        <label for="exampleInputHotline">Hotline</label>
                        @Html.TextBoxFor(m => m.HOTLINE, new { @class = "form-control", @type = "number", @placeholder = "Hotline" })

                    </div>
                    <div class="form-group">
                        <label for="exampleInputAddress">Address</label>
                        @Html.TextBoxFor(m => m.ADDRESS, new { @class = "form-control", @placeholder = "Address" })
                    </div>
                </div>
                <div id="information-part" class="content" role="tabpanel" aria-labelledby="information-part-trigger">
                    <a href="@Url.Action("index", new { area = "admin", controller = "trungtam" })" onclick="onShow();" class="btn btn-danger">Hủy</a>
                    <button type="submit" onclick="edittrungtam()" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<script src="~/ajax/Admin/ajaxTrungTam.js"></script>



