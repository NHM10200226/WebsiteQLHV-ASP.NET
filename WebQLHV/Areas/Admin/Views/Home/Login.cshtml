@model WebQLHV.Models.TaiKhoan
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" />
    <link rel="stylesheet" href="~/Content/Login/css/bootstrap-login-form.min.css" />
    <link rel="stylesheet" href="~/Content/Login/css/button.css" />
    <style>
        body {
            background-image: url('../../../../content/login/img/img1.jpg');
            background-size: 100%;
        }
    </style>
</head>

<body>
    <section class="vh-100">
        <div class=" container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;background-color:mintcream">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="card-body p-5 text-center">
                                <h3 class="mb-4"><b>EDT3T</b></h3>
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m => m.USERNAME, "", new { @class = "form-control", @placeholder = "" })

                                    <label class="form-label" for="username">
                                        <span class="fas fa-user-tie"></span><b>
                                            Tên đăng
                                            nhập
                                        </b>
                                    </label>
                                </div>
                                <div class="form-outline mb-4">
                                    @Html.PasswordFor(m => m.PASSWORD, new { @class = "form-control", @placeholder = "" })
                                    <label class="form-label" for="password" autocomplete="off">
                                        <span class="fas fa-lock"></span><b>
                                            Mật
                                            khẩu
                                        </b>
                                    </label>
                                </div>
                                @if (!string.IsNullOrEmpty(ViewBag.error))
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.error
                                    </div>
                                }
                                <div class="form-check d-flex justify-content-start mb-4">
                                    <input class="form-check-input" type="checkbox" value="" id="form1Example3" />
                                    <label class="form-check-label" for="form1Example3"><b> Nhớ mật khẩu </b></label>
                                </div>
                                <button class="btn btn-primary btn-lg btn-block custom-btn btn-14" onclick="btnlogin()" name="submit" type="submit">Đăng nhập</button>
                                <p></p>
                                <a href="@Url.Action("index", new { area = "", controller = "Home" })" onclick="onShow();" class="btn btn-danger" style="width:100%; font-size:14px">Trở lại</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script type="text/javascript" src="~/Content/Login/js/mdb.min.js"></script>
</body>

</html>

