@model WebQLHV.Models.DiemThi
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/diem" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Sửa</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sửa thông tin điểm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Điểm Thi</a></li>
                    <li class="breadcrumb-item active">Sửa</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Nhập thông tin điểm</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <!-- your steps content here -->
                @Html.HiddenFor(m => m.ID)
                <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group">
                        <label for="exampleInputName">Tên khóa học</label>
                        @Html.TextBoxFor(m => m.KHOAHOC, new { @class = "form-control", @placeholder = "Lý thuyết", @readonly = "readonly" })

                    </div>
                    <div class="form-group">
                        <label for="exampleInputStatus">Học viên</label>
                        @Html.TextBoxFor(m => m.HOCVIEN, new { @class = "form-control", @placeholder = "Lý thuyết", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputID">Lý thuyết</label>
                        @Html.TextBoxFor(m => m.LYTHUYET, new { @class = "form-control", @placeholder = "Lý thuyết" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputID">Thực hành</label>
                        @Html.TextBoxFor(m => m.THUCHANH, new { @class = "form-control", @placeholder = "Thực hành" })
                    </div>
                </div>
                <div id="information-part" class="content" role="tabpanel" aria-labelledby="information-part-trigger">
                    <a href="@Url.Action("index", new { area = "admin", controller = "diem" })" onclick="onShow();" class="btn btn-danger">Hủy</a>
                    <button type="submit" onclick="edithanggplx()" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>

<script src="~/ajax/Admin/ajaxDiem.js"></script>
