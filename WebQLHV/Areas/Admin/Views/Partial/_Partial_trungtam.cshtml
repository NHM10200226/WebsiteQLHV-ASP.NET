@model List<WebQLHV.Models.TrungTam>

@{
    ViewBag.Title = "_Partial_trungtam";
}
<div class="card-body table-responsive p-0" style="height: 400px;">
    <table class="table table-bordered" id="tbthongtin">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã TT</th>
                <th>Tên</th>
                <th>Email</th>
                <th>Hotline</th>
                <th>Địa chỉ</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="">
            @if (Model != null && Model.Count > 0)
            {
                var i = 1;
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.ID</td>
                        <td>@item.NAME</td>
                        <td>@item.EMAIL</td>
                        <td>@item.HOTLINE</td>
                        <td>@item.ADDRESS</td>
                        <td>
                            <a href="@Url.Action("edit", new { area = "admin", controller = "trungtam",id=item.ID })" class="btn btn-primary">Sửa</a>
                            <button type="submit" onclick="btndelete('@item.ID')" class="btn btn-danger">Xóa</button>
                        </td>
                    </tr>
                    i++;
                }

            </tbody>
        }
        else
        {
            <tbody>
                <tr>
                    <td colspan="4">Không có bản ghi nào</td>
                </tr>
            </tbody>
        }
        </table>
    </div>