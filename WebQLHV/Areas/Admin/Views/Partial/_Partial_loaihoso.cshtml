@model List<WebQLHV.Models.LoaiHoSo>

@{
    ViewBag.Title = "_Partial_LoaiHoSo";
}
<div class="card-body table-responsive p-0" style="height: 400px;">
    <table class="table table-bordered" id="tbthongtin">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên loại hồ sơ</th>
                @*<th>Tên trung tâm</th>*@
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                var i = 1;
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.NAME</td>
                        @*<td>@item.TRUNGTAM</td>*@
                        <td>
                            @if (@item.STATUS == true)
                            {
                                <p>Đã duyệt</p>
                            }
                            else
                            {
                                <p>Chưa duyệt</p>
                            }
                        </td>
                        <td>
                            @if (@item.STATUS == false)
                            {
                                <a href="@Url.Action("edit", new { area = "admin", controller = "LoaiHoSo",id=item.ID })" class="btn btn-primary">Sửa</a>
                                <button type="submit" onclick="btndelete('@item.ID')" class="btn btn-danger">Xóa</button>
                                <button type="submit" onclick="btnduyet('@item.ID')" class="btn btn-dark">Duyệt</button>
                            }
                            else
                            {
                                <button type="submit" onclick="btnhuyduyet('@item.ID')" class="btn btn-dark">Hủy duyệt</button>

                            }
                        </td>
                    </tr>
                    i++;
                }

            </tbody>
        }
        else
        {
            <tbody>
                <tr>
                    <td colspan="4">Không có bản ghi nào</td>
                </tr>
            </tbody>
        }
        </table>
    </div>
        <script src="~/ajax/Admin/ajaxLoaiHoSo.js"></script>
