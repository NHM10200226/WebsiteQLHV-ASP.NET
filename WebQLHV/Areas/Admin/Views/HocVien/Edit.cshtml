@model WebQLHV.Models.TTHocVien
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/hocvien" class="nav-link">Học viên</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Sửa</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sửa</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Danh sách</a></li>
                    <li class="breadcrumb-item active">Sửa</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header bg-primary">
            <h3 class="card-title">Nhập thông tin</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @Html.HiddenFor(m => m.ID)
                <!-- your steps content here -->
                <div id="logins-part" class="row" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group col-md-3">
                        <label>Họ và tên</label>
                        @Html.TextBoxFor(m => m.HOTEN, new { @class = "form-control", @placeholder = "Họ tên" })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Số điện thoại</label>
                        @Html.TextBoxFor(m => m.SDT, new { @class = "form-control", @type = "number", @placeholder = "Số điện thoại" })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Ngày sinh</label>
                        @Html.TextBoxFor(m => m.NGAYSINH, new { @class = "form-control", @placeholder = "dd/mm/yyyy" })
                    </div>
                    <div class="form-group col-md-3">
                        <label>CMND/CCCD</label>
                        @Html.TextBoxFor(m => m.CMND, new { @class = "form-control", @type = "number", @placeholder = "CMND/CCCD" })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Nơi cấp</label>
                        @Html.DropDownList("NOICAP", new SelectList(ViewData["LITTinh"] as List<SelectListItem>, "Value", "Text"),
new { @class = "form-control select2 select2-blue ", @type = "search", data_placeholder = "Chọn..." })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Chọn giới tính</label>
                        @Html.DropDownList("GIOITINH", new SelectList(ViewData["LITGioiTinh"] as List<SelectListItem>, "Value", "Text"),
new { @class = "form-control select2 select2-blue ", data_placeholder = "Chọn..." })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Nhập địa chỉ</label>
                        @Html.TextBoxFor(m => m.DIACHI, new { @class = "form-control", @type = "text", @placeholder = "Địa Chỉ" })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Chọn trung tâm</label>
                        @Html.DropDownList("TRUNGTAM", new SelectList(ViewData["LITTT"] as List<SelectListItem>, "Value", "Text"),
new { @class = "form-control select2 select2-blue ", data_placeholder = "Chọn..." })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Chọn hạng thi</label>
                        @Html.DropDownList("HANGTHI", new SelectList(ViewData["LITHANG"] as List<SelectListItem>, "Value", "Text"),
new { @class = "form-control select2 select2-blue ", data_placeholder = "Chọn..." })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Chọn nơi học</label>
                        @Html.DropDownList("NOIHOC", new SelectList(ViewData["LITNoiHoc"] as List<SelectListItem>, "Value", "Text"),
new { @class = "form-control select2 select2-blue ", data_placeholder = "Chọn..." })
                    </div>
                    <div class="form-group col-md-3">
                        <label>Học phí hợp đồng</label>
                        @Html.TextBoxFor(m => m.HOCPHI, new { @class = "form-control", @placeholder = "Học phí" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Ghi chú</label>
                    @Html.TextBoxFor(m => m.GHICHU, new { @class = "form-control", @placeholder = "Ghi chú" })
                </div>
                <div class="form-group">
                    <label>Chọn hình ảnh</label>
                    <input class="row-cols-3" id="HINHANH" type="file" name="HINHANH" />
                    <img src="@Url.Content("~/Hinh/Hocvien/" + Model.HINHANH)" id="PreviewHA" alt="your image" style="width:13rem" />
                </div>
                <div id="information-part" class="content" role="tabpanel" aria-labelledby="information-part-trigger">
                    <a href="@Url.Action("index", new { area = "admin", controller = "hocvien" })" onclick="onShow();" class="btn btn-danger">Hủy</a>
                    <button type="submit" onclick="edithocvien()" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{

    <script src="~/ajax/Admin/ajaxHocVien.js"></script>
}

